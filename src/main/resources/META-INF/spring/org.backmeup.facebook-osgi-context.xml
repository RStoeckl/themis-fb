<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"	
	default-activation="lazy">
	<service id="facebookDescriptorService" ref="facebookDescriptor" auto-export="interfaces">
		<service-properties>
			<entry key="name" value="org.backmeup.facebook.plugin"/>
		</service-properties>
	</service>
	<service id="facebookValidatorService" ref="facebookValidator" auto-export="interfaces">
		<service-properties>
			<entry key="name" value="org.backmeup.facebook.plugin"/>
		</service-properties>
	</service>
	<service id="facebookDatasourceService" ref="facebookDatasource" auto-export="interfaces">
		<service-properties>
			<entry key="name" value="org.backmeup.facebook.main"/>
		</service-properties>
	</service>	
</blueprint>